<div id="<%= dom_id post %>">
  <h2><%= I18n.t("post.title") %></h2>
  <h2><%= post.title %></h2>
  <p class="timestamp">Created: <%= time_ago_in_words(post.created_at) %></p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Tags:</strong>
    <%= post.tags_string %>
  </p>

  <p>
    <strong>Writer:</strong>
    <%= post.writer_name %>
  </p>

</div>
